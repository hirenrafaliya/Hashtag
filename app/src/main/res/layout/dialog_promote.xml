<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardCornerRadius="@dimen/_2sdp"
        android:id="@+id/cardParent"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_gradient_secondary"
            android:id="@+id/imgPromote"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgPromote"
            android:text="Are you enjoying Hash ?"
            android:textAlignment="center"
            android:fontFamily="@font/sf_medium"
            android:textColor="@color/colorPrimaryBlack"
            android:textSize="@dimen/_16sdp"
            android:layout_margin="@dimen/_6sdp"
            android:id="@+id/txtDialogTitle"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDialogTitle"
                android:text="Please give us your feedback about this app so that we can improve our service."
                android:textAlignment="center"
                android:fontFamily="@font/sf_regular"
                android:textColor="@color/colorSecondaryBlack"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/txtDialogDesc"
                android:layout_marginTop="@dimen/_4sdp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDialogDesc"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#0063D3"
                    android:textSize="@dimen/_12sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@color/colorPrimaryWhite"
                    android:fontFamily="@font/sf_medium"
                    android:id="@+id/btnDialogNegative"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rate Us"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/bg_gradient_secondary"
                    android:textColor="@color/colorPrimaryWhite"
                    android:layout_margin="@dimen/_4sdp"
                    android:fontFamily="@font/sf_medium"
                    android:id="@+id/btnDialogPositive"
                    />

            </LinearLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>